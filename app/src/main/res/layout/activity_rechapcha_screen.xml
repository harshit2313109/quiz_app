<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutforrecaptcha"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rechapcha_screen">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_recaptcha_screen"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        app:titleTextColor="@android:color/white" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="242dp"
        android:layout_height="44dp"

        android:layout_marginStart="44dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="left"
        android:text="Play now"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:text="Kindly Verify your Email now to start the"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvWelcome"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvWelcome"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcome" />

    <EditText
        android:id="@+id/usernamehome"
        android:layout_width="295dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_background"
        android:hint=" Username"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/lets_go"
        android:layout_width="326dp"
        android:layout_height="58dp"
        android:layout_marginTop="44dp"
        android:backgroundTint="#FF4081"
        android:padding="12dp"
        android:text="I am not a Robot"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernamehome" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="73dp"
        android:layout_height="21dp"
        android:layout_marginTop="16dp"
        android:text="Username "
        app:layout_constraintStart_toStartOf="@+id/emailhome"
        app:layout_constraintTop_toBottomOf="@+id/emailhome" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:text="ultimate brain game"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tvSubtitle"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/tvSubtitle"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle" />

    <EditText
        android:id="@+id/emailhome"
        android:layout_width="295dp"
        android:layout_height="54dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/edittext_background"
        android:hint=" Email"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="238dp"
        android:layout_height="189dp"
        android:layout_marginStart="80dp"
        app:layout_constraintBottom_toTopOf="@+id/tvWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_recaptcha_screen"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home" />
</androidx.constraintlayout.widget.ConstraintLayout>
