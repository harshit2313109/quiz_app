<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeToUnlockid"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Quiz Text -->

    <ImageView
        android:id="@+id/splashimg"
        android:layout_width="407dp"
        android:layout_height="324dp"

        android:layout_marginTop="4dp"
        android:src="@drawable/splashimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/quizText"
        android:layout_width="394dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"

        android:fontFamily="@font/poppins_medium"
        android:padding="16dp"
        android:text="Play to expand your knowledge"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/splashimg" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="An exciting and rewarding experience where "
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/quizText"
        app:layout_constraintTop_toBottomOf="@+id/quizText" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="players can learn while playing"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/lets_go"
        android:layout_width="326dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#FF4081"
        android:padding="12dp"
        android:text="Get Started"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/quizText"
        app:layout_constraintStart_toStartOf="@+id/quizText"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="QUIZAKI"
        android:textColor="#FF5D7A"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
